@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}
<div class="identity-container">
    <form method="post">
        <input asp-for="Input.Code" type="hidden"/>
        <h2>Reset your password</h2>
        <hr/>
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        
        <div class="form-group margin-top-20">
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" autocomplete="username" aria-required="true" placeholder="name@example.com"/>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Password"></label>
            <input asp-for="Input.Password" autocomplete="new-password" aria-required="true" placeholder="Please enter your password."/>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.ConfirmPassword"></label>
            <input asp-for="Input.ConfirmPassword" autocomplete="new-password" aria-required="true" placeholder="Please confirm your password."/>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <button type="submit" class="push-right">Reset</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
